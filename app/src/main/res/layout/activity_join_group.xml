<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/join_group"
    tools:context=".join_group">

    <EditText
        android:id="@+id/unique_code"
        android:layout_width="283dp"
        android:layout_height="58dp"
        android:autofillHints="no"
        android:background="@drawable/custom_input"
        android:ems="10"
        android:fontFamily="@font/poppins"
        android:gravity="center"
        android:hint="@string/enter_unique_code"
        android:inputType="textPersonName"
        android:textColor="#5C8064"
        android:textColorHint="#097E62"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.688"
        tools:ignore="RtlSymmetry,TextContrastCheck" />

    <ImageButton
        android:id="@+id/joingroup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.842"
        app:srcCompat="@drawable/green_box_lite" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join"
        android:fontFamily="@font/poppins"
        android:textColor="#097E62"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/joingroup_btn"
        app:layout_constraintEnd_toEndOf="@+id/joingroup_btn"
        app:layout_constraintStart_toStartOf="@+id/joingroup_btn"
        app:layout_constraintTop_toTopOf="@+id/joingroup_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>